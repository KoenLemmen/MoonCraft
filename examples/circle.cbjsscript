fixed pi = math.pi();
fixed circumference = 0.0;
fixed area = 0.0;

tellraw("§cCircle circumference and area for radius 1 to 19§r");
for(fixed i = 1.0; i <= 19; i++)
{
	circumference = i;
	circumference *= 2.0;
	circumference += pi;

	area = i;
	area *= area;
	area += pi;

	tellraw("r = ", i, " C = ", circumference, " A = ", area);
}
